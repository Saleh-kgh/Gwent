<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Pane fx:id="pane" prefHeight="1080.0" prefWidth="1920.0" styleClass="login-menu"
      stylesheets="@../StyleSheets/MainMenu.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.Controller.MainViewController">
    <AnchorPane prefHeight="1080.0" prefWidth="1920.0">
        <ImageView fitHeight="1158.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../Pics/BackGrounds/mainMenuQ.jpg"/>
            </image>
        </ImageView>
    </AnchorPane>
    <ImageView fitHeight="1080.0" fitWidth="370.0" layoutX="65.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../Pics/BackGrounds/MainMenuBar.png"/>
        </image>
    </ImageView>
    <Button fx:id="startGameButton" layoutX="100.0" layoutY="388.0" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#startGameAction" prefHeight="60.0"
            prefWidth="300.0" text="Start New Game"/>
    <Button fx:id="profileButton" layoutX="100.0" layoutY="488.0" onMouseClicked="#profileAction" prefHeight="60.0"
            prefWidth="300.0" text="Profile"/>
    <Button fx:id="ldBoardButton" layoutX="100.0" layoutY="588.0" onMouseClicked="#ldBoardAction" prefHeight="60.0"
            prefWidth="300.0" text="Leader Board"/>
    <Button fx:id="cheatsButton" layoutX="100.0" layoutY="688.0" onMouseClicked="#cheatsAction" prefHeight="60.0"
            prefWidth="300.0" text="Cheats"/>
    <Button fx:id="logoutButton" layoutX="100.0" layoutY="988.0" onMouseClicked="#logoutAction" prefHeight="60.0"
            prefWidth="145.0" text="Logout"/>
    <Button fx:id="exitButton" layoutX="255.0" layoutY="988.0" onMouseClicked="#exitAction" prefHeight="60.0"
            prefWidth="145.0" text="Exit"/>
    <Button fx:id="roomButton" layoutX="100.0" layoutY="799.0" onMouseClicked="#Rooms" prefHeight="60.0"
            prefWidth="300.0" text="Rooms"/>
</Pane>
