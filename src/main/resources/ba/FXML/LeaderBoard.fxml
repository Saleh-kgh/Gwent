<Pane fx:id="pane" prefHeight="1080" prefWidth="1920.0" styleClass="login-menu" stylesheets="@../StyleSheets/Menus.css"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="view.Controller.LeaderBoard">
    <AnchorPane>
        <HBox prefHeight="1080.0" prefWidth="2380.0">
            <ImageView fitHeight="1163.0" fitWidth="1079.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Pics/BackGrounds/rightLd.png"/>
                </image>
            </ImageView>
            <ScrollPane prefHeight="340.0" prefWidth="226.0" styleClass="border-pane">
                <content>
                    <ListView fx:id="leaderboardListView" prefHeight="524.0" prefWidth="226.0" styleClass="list-view">
