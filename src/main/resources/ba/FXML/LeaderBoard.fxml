                    </ListView>
                </content>
            </ScrollPane>
            <ImageView fitHeight="1080.0" fitWidth="1086.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../Pics/BackGrounds/leftLD.png"/>
                </image>
            </ImageView>
        </HBox>
        <VBox layoutX="1081.0" layoutY="524.0" prefHeight="72.0" prefWidth="210.0">
            <ChoiceBox fx:id="choiceBox" prefHeight="23.0" prefWidth="226.0"/>
        </VBox>
        <VBox layoutX="1084.0" layoutY="635.0" prefHeight="170.0" prefWidth="210.0">
            <Button onAction="#refresh" prefHeight="48.0" prefWidth="226.0" text="refresh"/>
            <Button layoutX="10.0" layoutY="10.0" onAction="#back" prefHeight="48.0" prefWidth="226.0" text="back"/>
        </VBox>
    </AnchorPane>
</Pane>
